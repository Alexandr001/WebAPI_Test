@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@using AdminPanel.Models
@model IEnumerable<AdminPanel.Models.CategoryModel>
@{
    ViewBag.Title = "Category";
}

<a href="Create">Добавить категорию</a>
<h1>Список категорий:</h1>
<table>
     <tr><th>Id</th><th>Name</th><th>Image</th><th>Products</th></tr>
    @foreach (CategoryModel category in Model)
    {
        <tr>
            <td>@category.Id</td>
            <td>@category.Name</td>
            <td>@category.Image</td>
            <td>@category.Products</td>
            <td>
                <a asp-action="Edit" asp-controller="Category" asp-route-id="@category.Id">Изменить</a>
            </td>
            <td>
                <form asp-action="DeleteCategory" method="post" asp-route-id="@category.Id">
                    <input type="submit" value="Удалить" />
                </form>
            </td>
        </tr>
    }
</table>
