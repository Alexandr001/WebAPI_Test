@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model AdminPanel.Models.CategoryModel

<h1>Введите данные:</h1>
<form asp-action="AddProduct" method="post">
    <label>Name: </label> <input name="name" required/><br/>
    <label>Description: </label> <input name="description"/><br/>
    <label>Price: </label> <input name="price"/><br/>
    <label>Image</label> <input type="file" accept="image/*" name="image"><br/>
    <label>CategoryId</label> <input type="number" name="categoryId"/>
    <input type="submit" value="Send" /><br />
</form>

